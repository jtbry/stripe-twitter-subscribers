{
  "hosting": {
    "predeploy": "cd client; npm run build",
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "subscriber-api",
          "region": "us-central-1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}